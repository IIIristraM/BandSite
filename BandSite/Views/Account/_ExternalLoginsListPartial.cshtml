@model ICollection<AuthenticationClientData>

@if (Model.Count == 0)
{
    <div>
        <p>There are no external authentication services configured. See <a href="http://go.microsoft.com/fwlink/?LinkId=252166">this article</a>
        for details on setting up this ASP.NET application to support logging in via external services.</p>
    </div>
}
else
{
    foreach (AuthenticationClientData p in Model)
    {
        using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "providerForm", data_sealed = "" }))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="provider" value="@p.AuthenticationClient.ProviderName"/>
            <div onclick="$('#providerForm').submit();"  title="Log in using your @p.DisplayName account" class="google-btn"></div>
        }
    }
}
