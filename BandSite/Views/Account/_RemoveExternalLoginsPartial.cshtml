@model ICollection<BandSite.Models.ViewModels.ExternalLogin>

@if (Model.Count > 0)
{
    <br><hr><br>
    <div class="h4">Registered external logins</div>
    <br/>
    <table>
        <tbody>
        @foreach (var externalLogin in Model)
        {
            <tr>
                <td>@externalLogin.ProviderDisplayName</td>
                <td>
                    @if (ViewBag.ShowRemoveButton)
                    {
                        using (Html.BeginForm("Disassociate", "Account", FormMethod.Post, new {id = externalLogin.ProviderDisplayName + "Form"}))
                        {
                            @Html.AntiForgeryToken()
                            <div>
                                @Html.Hidden("provider", externalLogin.Provider)
                                @Html.Hidden("providerUserId", externalLogin.ProviderUserId)
                                <a href="#account/manage" onclick="$('#@(externalLogin.ProviderDisplayName + "Form")').submit()"><i class="glyphicon glyphicon-remove-circle"></i></a>
                            </div>
                        }
                    }
                    else
                    {
                        @: &nbsp;
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}