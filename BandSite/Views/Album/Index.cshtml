@model IEnumerable<BandSite.Models.Entities.Album>
<div class="container">
    <div>
        <table class="table table-hover">
            <thead>
                      <tr>
                          <th>@Html.DisplayNameFor(model => model.Title)</th>
                          <th>@Html.DisplayNameFor(model => model.Published)</th>
                          <th></th>
                      </tr>
                  </thead>
            <tbody>

                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @((item.Published.HasValue) ? item.Published.Value.ToString("yyyy-MM-dd") : "")
                        </td>
                        <td>
                             <a href="@("#album/details/" + item.Id)"><i class="glyphicon glyphicon-info-sign"></i></a>
                             @if (User.IsInRole("Administrator"))
                             { 
                                  <a href="@("#album/edit/" + item.Id)"><i class="glyphicon glyphicon-edit"></i></a>
                                  <a href="@("#album/delete/" + item.Id)"><i class="glyphicon glyphicon-remove-circle"></i></a>
                             }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    @if(User.IsInRole("Administrator"))
    {
    <div style="padding: 8px;">
        <a href="#album/create"><i class="glyphicon glyphicon-plus"></i></a>
    </div>
    }
</div>
