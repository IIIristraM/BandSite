@model IEnumerable<BandSite.Models.Entities.Song>
<div class="container">
    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                             <a href="@("#song/details/" + item.Id)"><i class="glyphicon glyphicon-info-sign"></i></a>
                             @if (User.IsInRole("Administrator"))
                             { 
                                 <a href="@("#song/edit/" + item.Id)"><i class="glyphicon glyphicon-edit"></i></a>
                                 <a href="@("#song/delete/" + item.Id)"><i class="glyphicon glyphicon-remove-circle"></i></a>
                             }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if(User.IsInRole("Administrator"))
    {
    <div class="add-button">
        <a href="#song/create"><i class="glyphicon glyphicon-plus"></i></a>
    </div>
    }
</div>
